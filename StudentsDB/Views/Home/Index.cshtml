@model IEnumerable<StudentsDB.Models.DB.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="form-group">
                @Html.Label("Search:", new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.TextBox("SearchTerm", null, new { @class = "form-control", @style = "max-width: 100%;" })
                </div>
                <div class="col-md-2">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>

<hr />

<div class="row">
    <div class="col-md-12">
    <p>
        @Html.ActionLink("Create New", "NewStudent")
    </p>

    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-condensed table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mobile)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telephone)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mobile)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telephone)
                    </td>
                    <td>
                        <a href='@Url.Action("UpdateStudent", "Home", new { id = item.StudentId })'><i class="fas fa-pen-square fa-2x"></i></a>
                        <a href='@Url.Action("DeleteStudent", "Home", new { id = item.StudentId})'><i class="fas fa-window-close fa-2x text-danger"></i></a>
                    </td>
                </tr>
            }

        </table>
    }
    else
    {
        <div class="alert alert-success">
            <p>There is currently no record in the database.</p>
        </div>
    }
    </div>

</div>